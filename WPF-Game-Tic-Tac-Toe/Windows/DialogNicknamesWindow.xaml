<Window x:Class="WPF_Game_Tic_Tac_Toe.Windows.DialogNicknamesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WPF_Game_Tic_Tac_Toe.Windows"
        mc:Ignorable="d"
        Title="DialogNicknamesWindow" Height="450" Width="800">
    <Grid>
        <TextBlock TextAlignment="Center" Margin="0 10 0 0">Enter NickName №1</TextBlock>
        <TextBox x:Name = "FirstName" Width="250" Height="30" VerticalAlignment="Top" Margin="0 35 0 0 "></TextBox>
        
        <TextBlock TextAlignment="Center" Margin="0 100 0 0">Enter NickName №2</TextBlock>
        <TextBox x:Name ="SecondName" Width="250" Height="30" VerticalAlignment="Top" Margin="0 135 0 0 "></TextBox>
        
        <Button Width="300" Height="50" VerticalAlignment="Bottom" FontSize="22" Click="Button_ChangeNickNames">Accept</Button>
    </Grid>
</Window>
